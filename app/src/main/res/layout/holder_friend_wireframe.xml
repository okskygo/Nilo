<?xml version="1.0" encoding="utf-8"?>
<com.silver.cat.nilo.view.widget.layout.ShimmerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shimmerLayout"
>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/ic_account_circle_gray_40dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0"/>

        <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:background="@color/colorWireFrame"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="@dimen/material_component_lists_single_line_text_size"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintLeft_toRightOf="@+id/icon"
                app:layout_constraintTop_toTopOf="@+id/icon"
                app:layout_constraintBottom_toBottomOf="@+id/icon"
                app:layout_constraintRight_toLeftOf="@+id/guideline"
                android:layout_marginRight="8dp"
        />

        <android.support.constraint.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline"
                app:layout_constraintGuide_percent="0.88"
                android:orientation="vertical"/>

    </android.support.constraint.ConstraintLayout>


</com.silver.cat.nilo.view.widget.layout.ShimmerLayout>