<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
    >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/material_component_lists_icon_left_padding"
        android:src="@drawable/ic_account_circle_gray_40dp"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="200dp"
        android:layout_marginLeft="@dimen/material_component_lists_text_left_padding"
        android:layout_marginRight="@dimen/material_component_lists_right_padding"
        android:layout_centerVertical="true"
        android:background="@color/colorWireFrame"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="@dimen/material_component_lists_single_line_text_size"
        tools:text="Rex"
        />


</RelativeLayout>