<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ShimmerLayout">
        <attr name="shimmer_color" format="color|reference"/>
        <attr name="shimmer_animation_duration" format="integer|reference"/>
        <attr name="shimmer_auto_start" format="boolean|reference"/>
        <attr name="shimmer_angle" format="integer|reference"/>
    </declare-styleable>
    <declare-styleable name="RoundedNetworkImageView">
        <attr name="borderColor" format="reference|color"/>
        <attr name="roundedBorderWidth" format="dimension"/>
        <attr name="roundedRadius" format="dimension"/>
        <attr name="leftTopRoundedRadius" format="boolean"/>
        <attr name="leftBottomRoundedRadius" format="boolean"/>
        <attr name="rightTopRoundedRadius" format="boolean"/>
        <attr name="rightBottomRoundedRadius" format="boolean"/>
        <attr name="defaultImage" format="integer"/>
    </declare-styleable>
</resources>
