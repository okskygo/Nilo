<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="NiloImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="NiloEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">#3f3f3f</item>
    </style>

    <style name="NiloChatTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#3f3f3f</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NiloButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:theme">@style/NiloButtonTheme</item>
    </style>

    <style name="NiloButtonTheme">
        <item name="colorButtonNormal">@color/secondaryColor</item>
        <item name="android:colorButtonNormal" tools:ignore="NewApi">@color/secondaryColor</item>
    </style>

</resources>
